page {
	background: #eee;
}

.row {
	overflow: hidden;	/*产生bfc机制，让内部浮动元素不会乱跑*/
	padding: 10px 0;
	border-bottom: 1px solid #ccc;
	color: #777;
	background: #fff;
}

.info {
	margin-left: 100px;
	line-height: 30px;
}

.submit-button {
	margin: 10px 8px 0 8px;
	background: #ff9700;
	line-height: 38px;
	border-radius: 6px;
	text-align: center;
	color: #fff;
}

.title {
	width: 90px;
	float: left;
	padding-left: 10px;
	line-height: 30px;
}

.info-input {
	height: 50px;
}

.success {
	background: #fff;
	padding-bottom: 20px;
}

.congratulation {
	text-align: center;
	line-height: 100px;
	font-size: 20px;
}

.success-icon {
	margin-right: 10px;
	position: relative;
	top: 5px;
}

.backhome-button {
	margin: 0 10px;
}
